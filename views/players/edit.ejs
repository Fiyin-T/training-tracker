<%- include('../partials/header') %>

<main>
    <h3>Edit <%=player.name%>'s Profile </h3>
    <div class="edit-player">
        <form action="/players/<%=player._id%>/update?_method=PUT" method="POST">
            <label>Name*: <input type="text" name="name"></label>
            <label>Age*: <input type="text" name="age"></label><br><br>
            <label>Position*: <input type="text" name="position"></label> 
            <label>Height*: <input type="text" name="height"></label>
            <label>Prefered Foot: 
                <select name="preferredFoot">
                    <option value="Left">Left</option>
                    <option value="Right">Right</option>
                </select>
            </label><br><br> 
            <input type="submit" value="Submit Edit">
        </form>
    </div>
</main>

<%- include('../partials/footer') %>